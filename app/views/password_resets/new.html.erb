<% provide(:title, 'Reset Password') %>
<h1>Reset Password</h1>

<div class="row">
    <div class="span6 offset3">
        <%= form_tag password_resets_path, :method => :post, class: "form-horizontal" do %>
        <div class="control-group">
            <%= label_tag :email, "Email", class:"control-label" %>
            <div class="controls">
            <%= text_field_tag :email, params[:email] %>
            <br /><br />
            <%= submit_tag "Send Email Request", class: "btn btn-large btn-danger" %>
            </div>
        </div>
        <% end %>
    </div>
</div>
